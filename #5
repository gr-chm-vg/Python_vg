import turtle

turtle.shape('turtle')
turtle.speed("fastest")  # Установка максимальной скорости черепахи

for i in range(10):  # Рисуем 10 квадратов
    turtle.penup()  # Поднять перо, чтобы не оставлять след при перемещении
    turtle.goto(-10 * i, -10 * i)  # Смещение начальной точки для каждого квадрата
    turtle.pendown()  # Опустить перо для рисования
    for _ in range(4):  # Рисование одного квадрата
        turtle.forward(20 * (i + 1))  # Длина стороны квадрата увеличивается для каждого нового квадрата
        turtle.left(90)  # Поворот на 90 градусов для формирования угла

turtle.done()  # Завершаем рисование
